<div class="container-sm w-75">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1 class="text-center"><%= @content.title %></h1>
      <% if @comments.count > 0 %>
        <p>みんなのおすすめコメント</p>
        <%= render @comments %>
      <% else %>
        <p>おすすめコメントはまだありません</p>
      <% end %>
      <% if logged_in? %>
        <%= form_with model: @comments, url: content_comments_path(@content), local: true do |f| %>
          <%= f.text_field :body, placeholder: 'コメントを追加', class: 'form-inline col-10 my-3' %>
          <%= f.submit '送信', class: 'btn btn-primary' %>
        <% end %>
      <% else %>
        <p class="m-3">※おすすめコメントを投稿するにはログインが必要です</p>
      <% end %>
    </div>
  </div>
</div>